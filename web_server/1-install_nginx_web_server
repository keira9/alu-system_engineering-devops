#!/usr/bin/env bash
# Configures an Ubuntu machine to install and run Nginx web server

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create a custom index page with "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html
echo "Holberton School for the win!" > /var/www/html/index.html

# Make sure nginx is configured to listen on port 80
# The default configuration should already be set, but let's ensure it

# Stop nginx if running (to avoid conflicts)
service nginx stop

# Start nginx service
service nginx start

# Restart nginx to apply changes (without using systemctl)
service nginx restart
