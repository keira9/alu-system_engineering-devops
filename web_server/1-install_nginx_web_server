#!/usr/bin/env bash
# This script installs and configures Nginx on Ubuntu to serve a page with "Holberton School"

# Update package list
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Create a custom HTML page with "Holberton School"
echo "Holberton School" > /var/www/html/index.html

# Ensure Nginx is configured to listen on port 80 (default configuration)
# Start Nginx service
service nginx start

# Enable Nginx to start on boot
systemctl enable nginx 2>/dev/null || update-rc.d nginx defaults
