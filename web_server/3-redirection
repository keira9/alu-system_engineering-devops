#!/usr/bin/env bash
# This script installs and configures Nginx with a 301 redirect for /redirect_me

# Update package list
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Create a custom HTML page with "Holberton School"
echo "Holberton School" > /var/www/html/index.html

# Configure Nginx to redirect /redirect_me with 301 status
# Add the redirect configuration to the default server block
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
service nginx restart
