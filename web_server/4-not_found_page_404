#!/usr/bin/env bash
# Configures Nginx server with a custom 404 page that contains the string "Ceci n'est pas une page"

# Update package list and install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx to use the custom 404 page
CONFIG_FILE="/etc/nginx/sites-available/default"

# Add custom 404 error page configuration if not already present
if ! grep -q "error_page 404" "$CONFIG_FILE"; then
    sed -i '/server_name _;/a \\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' "$CONFIG_FILE"
fi

# Restart Nginx to apply changes
service nginx restart
